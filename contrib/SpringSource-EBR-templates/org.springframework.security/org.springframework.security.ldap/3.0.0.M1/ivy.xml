<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://ivyrep.jayasoft.org/ivy-doc.xsl"?>
<ivy-module
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd"
		version="1.3">

	<info organisation="org.springframework.security" module="org.springframework.security.ldap"/>

	<configurations>
		<include file="${spring.build.dir}/common/default-ivy-configurations.xml"/>
	</configurations>

	<publications>
		<artifact name="${ant.project.name}"/>
		<artifact name="${ant.project.name}-sources" type="src" ext="jar"/>
		<artifact name="license" type="license" ext="txt"/>
	</publications>

	<dependencies>
		<dependency org="org.apache.commons" name="com.springsource.org.apache.commons.logging" rev="1.0.4" conf="compile->runtime"/>
		<dependency org="org.apache.directory" name="com.springsource.org.apache.directory.server.core" rev="1.0.2" conf="optional->runtime"/>
		<dependency org="org.apache.directory" name="com.springsource.org.apache.directory.server.jndi" rev="1.0.2" conf="optional->runtime"/>
		<dependency org="org.apache.directory" name="com.springsource.org.apache.directory.server.protocol.shared" rev="1.0.2" conf="optional->runtime"/>
		<dependency org="org.springframework.ldap" name="org.springframework.ldap" rev="1.3.0.RELEASE" conf="compile->runtime"/>
		<dependency org="org.springframework.security" name="org.springframework.security.core" rev="3.0.0.M1" conf="compile->runtime"/>
		<dependency org="org.springframework" name="org.springframework.beans" rev="3.0.0.M3" conf="compile->runtime"/>
		<dependency org="org.springframework" name="org.springframework.context" rev="3.0.0.M3" conf="compile->runtime"/>
		<dependency org="org.springframework" name="org.springframework.core" rev="3.0.0.M3" conf="compile->runtime"/>
		<dependency org="org.springframework" name="org.springframework.jdbc" rev="3.0.0.M3" conf="optional->runtime"/>
	</dependencies>

</ivy-module>
